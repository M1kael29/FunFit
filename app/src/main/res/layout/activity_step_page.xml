<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stepPage"
    android:background="@drawable/colour"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    android:id="@+id/stepPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/shoe"
                android:paddingTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:paddingTop="30dp"
                android:paddingStart="95dp"
                android:text="Your Step Data "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="35dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                style="?android:progressBarStyleHorizontal"
                android:layout_centerInParent="true"
                android:layout_width="143dp"
                android:layout_height="450dp"
                android:paddingBottom="270dp"
                android:max="1"
                android:progress="1"
                android:progressDrawable="@drawable/secondaryprogresscircle"
                android:textAlignment="center">

            </ProgressBar>

            <ProgressBar
                android:id="@+id/stepProgressBar"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="143dp"
                android:layout_height="420dp"
                android:layout_centerInParent="true"
                android:paddingBottom="270dp"
                android:max="100"
                android:progress="1000"
                android:progressDrawable="@drawable/progresscircle">

            </ProgressBar>


            <TextView
                android:id="@+id/tvStepsValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="110dp"
                android:paddingBottom="200dp"
                android:text="1000/5000"
                android:textSize="30dp"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tvStepsDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="110dp"
                android:paddingBottom="380dp"
                android:text="27/01/20"
                android:textSize="23dp"
                android:fontFamily="sans-serif-medium"/>

        </RelativeLayout>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/stepBarGraph"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>