<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    android:background="@drawable/grad_bg">


        <RelativeLayout
            android:id="@+id/testBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/colour"
            android:visibility="gone"
            android:animateLayoutChanges="true"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:padding="10dp">


            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:animateLayoutChanges="true"
                android:paddingTop="30dp"
                android:paddingStart="20dp">

                <ImageButton
                    android:id="@+id/imgView_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/defaultprofile"
                    android:background="@color/transparent"/>

                <RelativeLayout
                    android:id="@+id/rellay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgView_logo"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:paddingTop="30dp">


                    <TextView
                        android:id="@+id/Welcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome"
                        android:textSize="30dp"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"/>

                    <RelativeLayout
                        android:id="@+id/rellay3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        >


                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>


            //THIS IS THE STEP UI


            <RelativeLayout
                android:id="@+id/rellay2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:paddingTop="55dp"
                    android:text="Daily Stats"
                    android:paddingStart="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="32dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewStep"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="200dp"
                    app:cardCornerRadius="23dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Today's Steps"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:fontFamily="sans-serif-medium"/>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvStepsValue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="110dp"
                        android:text="0"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-medium"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="53dp"
                        android:paddingTop="31dp">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/shoe"/>

                    </LinearLayout>



                    <ProgressBar
                        style="?android:progressBarStyleHorizontal"
                        android:max="1"
                        android:layout_width="130dp"
                        android:layout_height="145dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="50dp"
                        android:rotation="-90"
                        android:progress="1"
                        android:progressDrawable="@drawable/secondaryprogresscircle"
                        android:textAlignment="center">

                    </ProgressBar>

                    <ProgressBar
                        android:id="@+id/stepProgressBar"
                        style="?android:progressBarStyleHorizontal"
                        android:layout_width="130dp"
                        android:layout_height="145dp"
                        android:max="100"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="50dp"
                        android:progress="2000"
                        android:progressDrawable="@drawable/progresscircle"
                        android:textAlignment="center"
                        android:rotation="-90">

                    </ProgressBar>


                </androidx.cardview.widget.CardView>


                //THIS IS THE DISTANCE UI


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewDistance"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="200dp"
                    app:cardCornerRadius="23dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Today's Distance"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="58dp"
                        android:paddingTop="36dp">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/distanceicon" />

                    </LinearLayout>


                    <ProgressBar
                        style="?android:progressBarStyleHorizontal"
                        android:layout_width="130dp"
                        android:layout_height="145dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="50dp"
                        android:rotation="-90"
                        android:max="1"
                        android:progress="1"
                        android:progressDrawable="@drawable/secondaryprogresscircle"
                        android:textAlignment="center">

                    </ProgressBar>

                    <TextView
                        android:id="@+id/tvDistanceValue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="110dp"
                        android:text="0"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-medium"/>

                    <ProgressBar
                        android:id="@+id/distanceProgressBar"
                        style="?android:progressBarStyleHorizontal"
                        android:layout_width="130dp"
                        android:layout_height="145dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="50dp"
                        android:rotation="-90"
                        android:max="100"
                        android:progress="4200"
                        android:progressDrawable="@drawable/progresscircle"
                        android:textAlignment="center">

                    </ProgressBar>

                </androidx.cardview.widget.CardView>


                //THIS IS THE CALORIE UI


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewCalories"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="380dp"
                    app:cardCornerRadius="23dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Today's Calories"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="53dp"
                        android:paddingTop="39dp">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/hearticon" />

                    </LinearLayout>


                    <ProgressBar
                        style="?android:progressBarStyleHorizontal"
                        android:max="1"
                        android:layout_width="130dp"
                        android:layout_height="145dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="50dp"
                        android:rotation="-90"
                        android:progress="1"
                        android:progressDrawable="@drawable/secondaryprogresscircle"
                        android:textAlignment="center">

                    </ProgressBar>

                    <TextView
                        android:id="@+id/tvCaloriesValue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="110dp"
                        android:text="0"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-medium"/>

                    <ProgressBar
                        android:id="@+id/CaloriesProgressBar"
                        style="?android:progressBarStyleHorizontal"
                        android:max="30"
                        android:layout_width="130dp"
                        android:layout_height="145dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="50dp"
                        android:rotation="-90"
                        android:progress="240"
                        android:progressDrawable="@drawable/progresscircle"
                        android:textAlignment="center">

                    </ProgressBar>

                </androidx.cardview.widget.CardView>

                //ACHIEVEMENT UI

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewAchievements"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="380dp"
                    app:cardCornerRadius="23dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Achievements"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="45dp"
                        android:paddingTop="36dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/achievementicon" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                //TODAYS STEPS BUTTON

                <Button
                    android:id="@+id/btnDay"
                    android:layout_width="160dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="200dp"
                    android:background="@color/transparent" />

                //TODAYS DISTANCE BUTTON

                <Button
                    android:id="@+id/btnMonth"
                    android:layout_width="160dp"
                    android:layout_height="140dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="200dp"
                    android:background="@color/transparent" />

                //TODAYS CALORIES BUTTON

                <Button
                    android:id="@+id/btnWeek"
                    android:layout_width="160dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="380dp"
                    android:background="@color/transparent" />

                //ACHIEVEMENTS BUTTON

                <Button
                    android:id="@+id/btnAllTime"
                    android:layout_width="160dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="380dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparent"/>


            </RelativeLayout>

        </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>